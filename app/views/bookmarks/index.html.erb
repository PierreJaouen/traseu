<div class="container py-5">
  <h1>Bookmarks#index</h1>
  <p>Find me in app/views/bookmarks/index.html.erb</p>
  <hr>
  <ul class="list-unstyled">
    <% @itineraries.each do |itinerary| %>
      <li id="itinerary-id-<%= itinerary.id %>">
        <%= link_to raw('<i class="fas fa-times"></i>'), "#{bookmarks_path}?query=delete&itinerary=#{itinerary.id}", remote: true, method: :get, class: 'text-decoration-none text-secondary' %>
        &emsp;
        <%= link_to "#{itinerary.country}, #{itinerary.experience} experience", itinerary_path(itinerary) %>
        </li>
    <% end %>
  </ul>
</div>
