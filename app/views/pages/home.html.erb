  <div class="container d-flex justify-content-between">
    <!-- Cities -->
    <div class="cities ml-3 mr-3">
      <div class="city-card" style="width: 30rem">
        <div class="card-body" style="padding: 0.4rem">
          <div class="d-flex justify-content-between">
            <h5 class="card-title">INPUT</h5>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="customSwitches">
              <label class="custom-control-label" for="customSwitches"></label>
            </div>
          </div>
            <ul style="list-style-type: none;">
              <li><p><i class="fas fa-utensils fas-lg" style="color:#3F3D56"></i> INPUT</p></li>
              <li><p><i class="fas fa-bed fas-lg" style="color:#3F3D56"></i> INPUT</p></li>
              <li><p><i class="fas fa-hiking fas-lg" style="color:#3F3D56"></i> INPUT</p></li>
            </ul>
            <div class="text-right">
              <a href="#" class="card-link, text-secondary">Edit details ></a>
            </div>
        </div>
      </div>
    </div>

    <!-- Map -->
    <div class="d-flex flex-column align-items-end m-4" style="width:60%">
      <div
        id="map"
        class="mt-3 mr-3"
        style="width: 100%;
        height: 600px;"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        data-markers="<%= @markers.to_json %>">
      </div>
      <i class="fas fa-file-download fa-2x" style="color:#3F3D56; margin: 1em"></i></div>
    </div>
  </div>



