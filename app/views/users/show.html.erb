<div class ="container py-5">
  <div class="row justify-content-center pb-5">
    <h1> You chose one of <%= @user.first_name.capitalize  %>'s itineraries</h1>
  </div>
  <div class="row">
    <div class="card-category3" style="background-image: url(https://images.unsplash.com/photo-1495374519711-e22c8b4596a0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=882&q=80)"></div>
    <div class="card-category3">

      <h3 class="text-center"><%= @user.first_name.capitalize  %>'s details</h3> <hr>
      <div class="d-flex justify-content-between mb-3">
        <div>
          <i class="far fa-flag"></i><b> From: </b><%= @user.countryoforigin  %> <br>
          <i class="far fa-envelope"></i><b> Contact me at: </b><%= @user.email  %> <br>
        </div>
      </div>

      <h3 class="text-center"><%= @user.first_name.capitalize  %>'s activity on Traseu</h3> <hr>
      <div class="d-flex justify-content-between mb-3">
        <div>
          <i class="fas fa-map-signs"></i><b> My itineraries: </b><%= @user.itineraryofuser  %> <br>
          <i class="fas fa-user-friends"></i><b> Followers: </b><%= @user.follower  %> <br>
          <i class="fas fa-users"></i> <b> Following: </b><%= @user.following  %> <br>
          <i class="fas fa-star"></i> <b> Rating: </b><%= @user.rating  %>  <br>
          <i class="fas fa-globe"></i> <b> Visited countries: </b> <%= @user.country %> <br>
        </div>
      </div>
      <h3 class="text-center">Know more about <%= @user.first_name.capitalize  %>:</h3> <hr>
        <p><%= @user.presentation  %></p>
        <div class="button">Back</div>
    </div>
</div>
