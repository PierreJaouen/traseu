<div class ="container py-5">
  <div class="row justify-content-center py-5 bg-white text-dark">
    <h1> You chose one of <%= @user.first_name.capitalize  %>'s itineraries </h1>
  </div>

  <div class="row bg-white text-dark pb-5">
    <div class="col-sm-1"></div>

    <div class="col-sm-5">
          <div class="text-center p-3 mb-3" style="position: relative">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1450562624248-869a3ec195f1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80)"></div>
            <div class="photo-info">
            <i class="far fa-flag"> </i><%= @user.countryoforigin  %> <br>
            <i class="far fa-envelope"> </i><%= @user.email  %> <br>
        </div>
      </div>
    </div>

    <div class="col-sm-5">
      <div class="text-center p-3">
        <h4 class="text-center"><%= @user.first_name.capitalize  %>'s activity on Traseu</h4> <hr>
      </div>

      <div class="text-justify p-3">
        <i class="fas fa-map-signs"></i><b> My itineraries: </b><%= @user.itineraryofuser  %> <br>
        <i class="fas fa-user-friends"></i><b> Followers: </b><%= @user.follower  %> <br>
        <i class="fas fa-users"></i> <b> Following: </b><%= @user.following  %> <br>
        <i class="fas fa-star"></i> <b> Rating: </b><%= @user.rating  %>  <br>
        <i class="fas fa-globe"></i> <b> Visited countries: </b> <%= @user.country %> <br>
      </div>


      <div class="col-sm-1"></div>
    </div>
  </div>
  <div class="row bg-white text-dark pb-5">
    <div class="col-1"></div>
    <div class="col-10 px-3">
      <div class="text-center p-3">
        <h4 class="text-center">Know more about <%= @user.first_name.capitalize  %>:</h4> <hr>
      </div>

      <div class="text-justify p-3">
       <p><%= @user.presentation  %></p>
      </div>
    </div>
    <div class="col-1"></div>

    <div class="row">
      <div class="col-1"></div>
      <div class=col-10>
        <div class="text-center p-3">
          <h4 class="text-center"><%= @user.first_name.capitalize  %>'s pictures:</h4> <hr>
        </div>

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="https://images.unsplash.com/photo-1519074598089-6436475c7f8f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1952&q=80" alt="First slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://images.unsplash.com/photo-1526392060635-9d6019884377?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="First slide" alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="https://images.unsplash.com/photo-1534615098829-958121bcc188?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="Third slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
</div>
      </div>
      <div class=col-1></div>
    </div>

    <div class="text-center p-3">
       <div class="button">Back</div>
      </div>
  </div>
</div>
